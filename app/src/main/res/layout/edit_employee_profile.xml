<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/employee_profileview_image"
            android:layout_width="155dp"
            android:layout_height="155dp"
            android:src="@drawable/man" />

        <TextView
            android:id="@+id/employee_profileview_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#DBDBDB"
            android:padding="10dp"
            android:text="...................."
            android:textColor="#000"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="#DBDBDB"
                android:padding="5dp"
                android:text="Name: "
                android:textColor="#000"
                android:textSize="25sp"/>

            <EditText
                android:id="@+id/employee_profileview_name_ET"
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:padding="5dp"
                android:text="......................."
                android:textColor="#000"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="#DBDBDB"
                android:padding="5dp"
                android:text="Phone:"
                android:textColor="#000"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/employee_profileview_phoneNumber_ET"
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:padding="5dp"
                    android:text="016 XX XX XXXX"
                android:textColor="#000"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="#DBDBDB"
                android:padding="5dp"
                android:text="E-mail:"
                android:textColor="#000"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/employee_profileview_email_ET"
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:padding="5dp"
                android:text="....................."
                android:textColor="#000"

                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="#DBDBDB"
                android:padding="5dp"
                android:text="Join Date:"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/employee_profileview_join_Date_TV"
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:background="#DBDBDB"
                android:padding="5dp"
                android:text="||-||-||"
                android:textColor="#000"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/button_background"
            android:orientation="horizontal" />

        <Button
            android:id="@+id/employee_profileview_Save_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="#DBDBDB"
            android:padding="8dp"
            android:text="Save Profile"
            android:textAllCaps="false"
            android:textSize="18sp" />


    </LinearLayout>
</ScrollView>
