<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:weightSum="7">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/employee_profileview_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/man" />

        <TextView
            android:id="@+id/employee_information_position"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#DBDBDB"
            android:gravity="center"
            android:padding="10dp"
            android:text="................"
            android:textColor="#000"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="89dp"
                android:layout_height="44dp"
                android:layout_marginRight="20dp"
                android:background="#DBDBDB"
                android:padding="5dp"
                android:text="Name: "
                android:textColor="#000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/employee_information_name_TV"
                android:layout_width="241dp"
                android:layout_height="40dp"
                android:background="#DBDBDB"
                android:padding="5dp"
                android:text=".............."
                android:textColor="#000"

                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/textView6"

                android:layout_width="87dp"
                android:layout_height="44dp"
                android:layout_marginRight="20dp"
                android:background="#DBDBDB"
                android:padding="5dp"
                android:text="Phone:"
                android:textColor="#000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/employee_information_phoneNumber_TV"
                android:layout_width="241dp"
                android:layout_height="40dp"
                android:background="#DBDBDB"
                android:padding="5dp"
                android:text="016 XX XX XXXX"
                android:textColor="#000"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="95dp"
                android:layout_height="44dp"
                android:layout_marginRight="20dp"
                android:background="#DBDBDB"
                android:padding="5dp"
                android:text="E-mail:"
                android:textColor="#000"

                android:textSize="25sp" />

            <TextView
                android:id="@+id/employee_information_email_TV"
                android:layout_width="241dp"
                android:layout_height="37dp"
                android:background="#DBDBDB"
                android:padding="5dp"
                android:text="............."
                android:textColor="#000"

                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/textView10"

                android:layout_width="100dp"
                android:layout_height="37dp"
                android:layout_marginRight="20dp"
                android:background="#DBDBDB"
                android:padding="5dp"
                android:text="Join Date:"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/employee_information_join_Date_TV"
                android:layout_width="241dp"
                android:layout_height="37dp"
                android:background="#DBDBDB"
                android:padding="5dp"
                android:text="||-||-||"
                android:textColor="#000"


                android:textSize="20sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/button_background"
            android:orientation="horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20sp"
            android:layout_weight="1.2"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageButton
                android:id="@+id/employee_information_phoneCall_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:background="#DBDBDB"
                android:src="@drawable/phone_call" />

            <ImageButton
                android:id="@+id/employee_information_email_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="#DBDBDB"
                android:layout_marginRight="5dp"
                android:src="@drawable/email" />

            <ImageButton
                android:id="@+id/employee_information_whatsup_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="#DBDBDB"
                android:src="@drawable/whatsapp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>